        });


        $(window).on('resize', function () {
            resize();
        });

        function resize() {
            if (window.innerWidth < 768) {
                //console.log('小於768');
                const html = $(".x2").html();
                if (html != "") {
                    $(".x1").append(html);
                    $(".x2").html("");
                }

            } else {
                //console.log('大於768');
                const html = $(".x1").html();
                if (html != "") {
                    $(".x2").append(html);
                    $(".x1").html("");
                }
            };
        }

